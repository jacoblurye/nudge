{
  "short_name": "Nudge",
  "name": "Nudge",
  "author": "Jacob Lurye",
  "description": "Stay focused, you goof!",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "React Ext"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["tabs", "storage"],
  "version": "0.0.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "nudge@example.org"
    }
  }
}
